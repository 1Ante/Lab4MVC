@model CustomerListViewModel


<h5>Customers</h5>
@foreach (var customer in Model.Customers)
{
    <partial name="_CustomerCard" model="customer" />
}

<br/>
<h6>Create new customer:</h6>
<br />
<form asp-controller="Customer" asp-action="AddCustomer" method="post">
    <table>
        <tr>
            <td>Enter firstname: </td>
            <td><input type="text" name="txtFirstName" pattern="[A-Za-z]{3}{15}" title="At least 3 and max 15 letters and only
                       letters allowed" required /></td>
        </tr>
        <tr>
            <td>Enter lastname: </td>
            <td><input type="text" name="txtLastName" pattern="[A-Za]{4}{15}" title="At least 4 and max 15 letters and only
                       letters allowed" required /></td>
        </tr>
        <tr>
            <td>Enter address: </td>
            <td><input type="text" name="txtAddress" pattern="[A-Za0-9]{10}{15}" title="At least 10 and max 15 characters and only
                       letters and digits allowed" required /></td>
        </tr>
        <tr>
            <td>Enter phone: </td>
            <td><input type="text" name="txtPhone" pattern="[0-9]{10}{12}" title="At least 10 and max 12 digits and only
                       digits allowed" required /></td>
        </tr>
        <tr>
            <td><input type="submit" value="Create" /></td>
        </tr>
    </table>
</form>





